<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./includes/head")%>
    <script defer src="/scripts/users.js"></script>
  </head>
  <body>
    <%- include("./includes/header") %>
    <main class="flex flex-col gap-4 justify-center items-center mt-4">
      <table class="display-table">
        <thead class="bg-gray-800 text-gray-50">
          <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < list.length; i++) { %>
          <tr>
            <td><%= list[i].name %></td>
            <td><%= list[i].last_name %></td>
            <td><%= list[i].email %></td>
            <td><%= list[i].age %></td>
            <td>
              <button class="delete" data-uid="<%= list[i].id %>">x</button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <form
        class="flex flex-col items-center justify-center gap-4"
        id="add-user"
      >
        <table>
          <tr>
            <td><input name="name" type="text" placeholder="Name" /></td>
            <td>
              <input name="lastName" type="text" placeholder="Last Name" />
            </td>
            <td><input name="email" type="email" placeholder="Email" /></td>
            <td><input name="age" type="number" placeholder="Age" /></td>
          </tr>
        </table>
        <button type="submit">Add User</button>
      </form>
    </main>
  </body>
</html>
